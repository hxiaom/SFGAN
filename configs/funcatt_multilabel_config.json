{
  "exp": {
    "name": "default"
  },
  "data_loader": {
    "name": "nsfc_data_loader.NsfcDataLoader",
    "MAX_SENT_LENGTH": 30,
    "MAX_DOC_LENGTH": 300,
    "MAX_SENTS": 18,
    // "MAX_NB_WORDS": 100000,
    "EMBEDDING_DIM": 300
  },
  "model":{
    "name": "funcatt_model.FuncAttModel"
  },
  "trainer":{
    "name": "funcatt_trainer.FuncAttModelTrainer",
    "num_epochs": 100,
    "batch_size": 64,
    "validation_split": 0.2
  },
  "callbacks":{
    "checkpoint_monitor": "val_loss",
    "checkpoint_mode": "min",
    "checkpoint_save_best_only": true,
    "checkpoint_save_weights_only": true,
    "checkpoint_verbose": true,
    "tensorboard_write_graph": true
  }
}